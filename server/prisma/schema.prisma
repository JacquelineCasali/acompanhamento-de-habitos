generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator" 
  }



datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// tabela de habitos
model Habit{
  id String @id @default(uuid())
  title String
 created_at DateTime
dayHabits DayHabit[]
weekDays HabitWeekDays[]
 
@@map("habits")

}
// tabela de dia da semana 
// relacionamento 1 para n week_day Int varios dias da semana
model HabitWeekDays{
  id String @id @default(uuid())
habit_id String
week_day  Int
habit Habit @relation(fields: [habit_id],references: [id])

@@unique([habit_id,week_day])
@@map("habit_week_days")
}

// tabela de dia
model Day{
  id String @id @default(uuid())
date DateTime // 2023-01-16 so registra o dia que completar pelo menos um habito 
dayHabit DayHabit[]

@@unique([date]) // campo unico
@@map("days")
}

//  tabela com as duas informações dia e hanitos
model DayHabit {
  id String @id @default(uuid())
 day_id String
 habit_id String
day Day @relation(fields: [day_id],references: [id])
habit Habit @relation(fields: [habit_id],references: [id])


@@unique([day_id, habit_id])
@@map("day_habits")


}